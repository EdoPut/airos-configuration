#! /usr/bin/env bash

original="$1"
other="$2"

function usage ()
{
	echo "Usage: check path/to/original/config.cfg" 
}

function dothemagic ()
{
	default="$(dirname $original)/$(basename $original .cfg).ini"
	generated=${other:-$default}

	grep -v "#" "$original" | sort  > "$original.sorted"
	sort "$generated" > "$generated.sorted"

	diff -d "$original.sorted" "$generated.sorted"

	rm {$original,$generated}.sorted
}

if [ -z $original ]; then
	usage
else
	dothemagic
fi
